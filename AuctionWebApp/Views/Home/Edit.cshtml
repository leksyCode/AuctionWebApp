@model AuctionWebApp.Models.Item
@{
    ViewBag.Title = "Edit slot";
}
<form asp-action="edit" asp-controller="home" asp-route-id="@Model.Id">
    <div class="form-group">
        <label asp-for="ImgUrl" class="control-label">Change image (url)</label>
        <input type="text" asp-for="ImgUrl" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Name" class="control-label">Name</label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="StartPrice" class="control-label">Start price</label>
        <input type="text" asp-for="StartPrice" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="BuyoutPrice" class="control-label">Buyout</label>
        <input asp-for="BuyoutPrice" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Term" class="control-label">Period in hours</label>
        <input asp-for="Term" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Send" class="btn btn-default" />
    </div>

</form>
